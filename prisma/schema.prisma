generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Supplier {
  id               String   @id @default(uuid())
  name             String
  serviceType      String
  status           String   @default("analisando")
  lastProposalDate String?  // ISO date string

  proposals        Proposal[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Proposal {
  id         String   @id @default(uuid())
  supplierId String
  supplier   Supplier @relation(fields: [supplierId], references: [id])
  
  // Could store raw PDF path or filename if we had it
  fileName   String?
  
  analysis   AnalysisResult?

  createdAt  DateTime @default(now())
}

model AnalysisResult {
  id         String   @id @default(uuid())
  proposalId String   @unique
  proposal   Proposal @relation(fields: [proposalId], references: [id])
  
  // Storing the JSON structure of the analysis
  // Fields from AnalysisResultSchema:
  // fornecedor, tipo_servico, valor_total, status_proposta, condicoes_pagamento, mapa_escopo, pontos_atencao
  
  // To avoid complex relations for the MVP of a JSON structure, we can verify if we should map them one by one or store JSON.
  // SQLite supports JSON via text, but Prisma + SQLite doesn't support native JSON type fully until recently or with specific setup.
  // Simple TEXT field with JSON stringified is safest for MVP.
  
  fullAnalysisJson String // Stores the entire analysis result object
  
  createdAt  DateTime @default(now())
}
